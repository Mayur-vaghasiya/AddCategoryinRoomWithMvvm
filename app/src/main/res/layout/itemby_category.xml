<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_48"
        android:layout_margin="@dimen/padding_margin_5"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_margin_5"
        android:text="@string/category"
        android:textColor="@color/dashusername"
        android:textSize="@dimen/text_18" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_5"
        android:layout_marginBottom="@dimen/padding_margin_5"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_itemname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_width_42"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_margin_5"
            android:text="@string/name"
            android:textColor="@color/popupheader"
            android:textSize="@dimen/text_16" />

    </androidx.cardview.widget.CardView>
</LinearLayout>